#!/usr/bin/python
# -*- coding: UTF-8 -*-

import os
import readline

nazwa_pliku = '/tmp/pracuj'
persistent_history = os.path.join(os.path.expanduser('~'), '.lemming_history')

polecenia = {
    '1': '%s - skopiuj',
    '2': '%s - przełącz na kopię',
    '3': '%s - usuń oryginał',
}

def rozwin_opis(odp):
    znak = odp[0]
    if znak in polecenia:
        wynik = polecenia[znak] % odp[1:]
    else:
        wynik = odp
    return wynik

def wykonaj():
    readline.set_history_length(10000)
    if os.path.isfile(persistent_history):
        readline.read_history_file(persistent_history)
    while os.path.isfile(nazwa_pliku):
        odp = raw_input('Commit message: ')
        if odp:
            odp = rozwin_opis(odp)
            polecenie = 'git commit -m "%s"' % odp
            os.system(polecenie)
        else:
            print 'Pusty napis - koniec pracy'
            break
    readline.write_history_file(persistent_history)

if __name__ == '__main__':
    wykonaj()
